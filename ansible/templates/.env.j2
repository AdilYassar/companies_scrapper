# Environment Configuration for Production
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://scraper_user:{{ db_password }}@{{ hostvars[groups['databases'][0]]['ansible_host'] }}:5432/companies_scraper
SUPABASE_URL=postgresql://scraper_user:{{ db_password }}@{{ hostvars[groups['databases'][0]]['ansible_host'] }}:5432/companies_scraper
SUPABASE_KEY={{ supabase_key }}

# Redis Configuration
REDIS_URL=redis://{{ hostvars[groups['databases'][0]]['ansible_host'] }}:6379

# API Configuration
API_VERSION=v1
CORS_ORIGIN=https://companies-scraper.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Scraping Configuration
SCRAPING_DELAY=1000
SCRAPING_TIMEOUT=30000
SCRAPING_RETRIES=3

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_DELAY=2000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
SECRET_KEY={{ secret_key }}

# Environment Configuration for Docker

# Node.js
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@database:5432/companies_scraper
SUPABASE_URL=postgresql://postgres:postgres@database:5432/companies_scraper
SUPABASE_KEY=your-supabase-key-here

# Redis Configuration
REDIS_URL=redis://redis:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Configuration
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Proxy Configuration
PROXY_ENABLED=false

# Scraping Configuration
SCRAPING_DELAY=1000
SCRAPING_TIMEOUT=30000
SCRAPING_RETRIES=3

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_DELAY=2000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
SECRET_KEY=your-secret-key-here
